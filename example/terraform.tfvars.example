# Example Terraform variables for S3 inventory configuration with automatic bucket discovery
# Copy this file to terraform.tfvars and update with your actual values

# Account IDs
collector_account_id = "999999999999"  # Replace with your collector account ID
source_account_id    = "111111111111"  # Replace with your source account ID

# Collector bucket prefix for regional buckets
# The module will automatically append the region to create regional bucket names
# Pattern: ${prefix}-${region} (e.g., nvisionx-s3-inventory-us-east-1)
# These regional buckets must already exist in the collector account with proper permissions
collector_bucket_prefix = "nvisionx-s3-inventory"

# AWS region configuration
# This is used as the default region for buckets without explicit regions
aws_region = "eu-central-1"

# Bucket configuration - 3 options (in priority order):
# Option 1: Use buckets.txt file (highest priority)
# Format: "bucket-name region" per line, or just "bucket-name" to use aws_region
bucket_list_file = "buckets.txt"

# Option 2: Specify bucket names directly (used if buckets.txt is empty/missing)
# Uncomment and add your bucket names:
# bucket_names = ["my-bucket-1", "my-bucket-2"]

# Option 3: Auto-discover buckets (used if both above are empty)
# This will scan all specified regions and find buckets automatically
enable_bucket_discovery = true
discovery_regions = [
  "us-east-1",
  "us-west-2",
  "eu-west-1",
  "eu-central-1"
  # Add more regions as needed
]

# Inventory configuration settings
inventory_name           = "terra-s3-inv"
included_object_versions = "All"
schedule_frequency       = "Daily"
output_format           = "Parquet"
enabled                 = true